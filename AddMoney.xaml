<Window x:Class="Vending_Machine.AddMoney" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Title="Ubaci Novčanicu" Height="360" Width="520" WindowStartupLocation="CenterOwner" ResizeMode="NoResize" Background="Transparent" WindowStyle="None" AllowsTransparency="True">
    <Viewbox Stretch="Uniform">
        <Border MaxWidth="460" CornerRadius="12" Background="White" Padding="20" BorderBrush="#ECEFF4" BorderThickness="1" Width="460" Height="320">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid>
                    <TextBlock Text="Ubacite Novčanicu" FontWeight="SemiBold" FontSize="16" Foreground="#1F2937" VerticalAlignment="Center"/>
                    <Button x:Name="CloseButton" Content="✕"
                        Width="28" Height="28" Background="Transparent" BorderThickness="0"
                        Foreground="#666" FontSize="14" Cursor="Hand"
                        HorizontalAlignment="Right" VerticalAlignment="Top" Click="Close_Click"/>
                </Grid>

                <StackPanel Grid.Row="1" Margin="0,18,0,18">
                    <UniformGrid Columns="2" Rows="3" Margin="0,0,0,6" HorizontalAlignment="Stretch" VerticalAlignment="Top">
                        <Button x:Name="Money_10" Content="10 RSD" Margin="8" Height="44"
                            Background="#FFFFFF" BorderBrush="#E6EBF2" BorderThickness="1"
                            Foreground="#111827" FontWeight="SemiBold" Cursor="Hand" Click="Money_10_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="8" Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <Button x:Name="Money_20" Content="20 RSD" Margin="8" Height="44"
                            Background="#FFFFFF" BorderBrush="#E6EBF2" BorderThickness="1"
                            Foreground="#111827" FontWeight="SemiBold" Cursor="Hand" Click="Money_20_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="8" Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <Button x:Name="Money_50" Content="50 RSD" Margin="8" Height="44"
                            Background="#FFFFFF" BorderBrush="#E6EBF2" BorderThickness="1"
                            Foreground="#111827" FontWeight="SemiBold" Cursor="Hand" Click="Money_50_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="8" Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <Button x:Name="Money_100" Content="100 RSD" Margin="8" Height="44"
                            Background="#FFFFFF" BorderBrush="#E6EBF2" BorderThickness="1"
                            Foreground="#111827" FontWeight="SemiBold" Cursor="Hand" Click="Money_100_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="8" Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <Button x:Name="Money_200" Content="200 RSD" Margin="8" Height="44"
                            Background="#FFFFFF" BorderBrush="#E6EBF2" BorderThickness="1"
                            Foreground="#111827" FontWeight="SemiBold" Cursor="Hand" Click="Money_200_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="8" Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <Button x:Name="Money_500" Content="500 RSD" Margin="8" Height="44"
                            Background="#FFFFFF" BorderBrush="#E6EBF2" BorderThickness="1"
                            Foreground="#111827" FontWeight="SemiBold" Cursor="Hand" Click="Money_500_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="8" Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </UniformGrid>

                    <!-- Info row -->
                    <StackPanel Orientation="Horizontal" Margin="6,12,0,0" VerticalAlignment="Center">
                        <TextBlock Text="ⓘ" Foreground="#4B5563" FontSize="14" Margin="0,0,8,0" VerticalAlignment="Center"/>
                        <TextBlock x:Name="AllowedNotesText" Text="Dozvoljena novčanice: 10, 20, 50, 100, 200, 500 RSD" Foreground="#6B7280" FontSize="13" TextWrapping="Wrap" VerticalAlignment="Center"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>
    </Viewbox>
</Window>