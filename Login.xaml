<Window x:Class="Vending_Machine.Login"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       Title="Administrator Prijava" Height="304" Width="642" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Background="#F5F8FF">
   <Border Margin="20" Background="White" CornerRadius="12" BorderBrush="#E0E7EF" BorderThickness="2">
       <Grid>
           <Grid.RowDefinitions>
               <RowDefinition Height="Auto"/>
               <RowDefinition Height="Auto"/>
               <RowDefinition Height="Auto"/>
               <RowDefinition Height="Auto"/>
           </Grid.RowDefinitions>
           <!-- Title and Close Button -->
            <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="10,10,10,0">
                <TextBlock Text="Prijava za administratora" FontWeight="Bold" FontSize="18" VerticalAlignment="Center"/>
                <Button Content="âœ•" Width="24" Height="24" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,0,0,0" Background="Transparent" BorderThickness="0" Foreground="Black" Click="Close_Click"/>
            </StackPanel>
           
            <StackPanel Grid.Row="1" Margin="10,20,10,0">
                <TextBlock Text="Lozinka" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,4"/>
                <PasswordBox x:Name="PasswordBox" FontSize="14" Padding="8" Background="#FFEFF6FF" BorderThickness="0" Margin="0,0,0,0"/>
            </StackPanel>
           
            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="10,12,10,0">
               <TextBlock Text="Demo lozinka: " FontSize="13" Foreground="#444" VerticalAlignment="Center"/>
               <Border Background="#F5F8FF" Padding="4,2" Margin="4,0,0,0" BorderBrush="#E0E7EF" BorderThickness="1" CornerRadius="4">
                   <TextBlock Text="admin123" FontSize="13" FontWeight="Bold" Foreground="#222"/>
               </Border>
           </StackPanel>
           
           <Button Grid.Row="3" Content="Prijavi se" Background="#05051A" Foreground="White" FontWeight="SemiBold" FontSize="15" Padding="0,8" Margin="10,20,10,10" BorderThickness="0" BorderBrush="#05051A" Height="36" Click="Login_Click"/>
       </Grid>
   </Border>
</Window>
